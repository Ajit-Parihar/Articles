

<!-- Flash Message -->
<% if flash[:notice] %>
  <div class="flash-notice success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="flash-notice error">
    <%= flash[:alert] %>
  </div>
<% end %>

<!-- Login and SignUp Links Styled as Buttons -->
<div class="button-container">
  <%= link_to "Login", new_session_path, class: "button login-btn" %>
  <%= link_to "Sign Up", new_user_path, class: "button signup-btn" %>
</div>




