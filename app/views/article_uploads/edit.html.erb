
<%= link_to "Home", articles_path, class: "home-btn" %>
<h1 class="page-title">Edit Article</h1>

<%= form_with model: @article, class: "login-form" do |form| %>
  <div class ="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
 
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control"%> 
  </div>

  <div class="form-group">
    <%= form.submit "Update", class: "btn btn-primary" %>
  </div>
   <% if flash[:notice] == "Can't login Successfully" || flash[:notice] == nil %>
  <%=link_to "Back", ownArticle_path, class: "signup-link"%>
  <%end%>
<% end %>

 
